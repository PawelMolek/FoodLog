<div class="card mt-5" style="width: 18rem;">
  <div class="card-header">
    <p class="card-title"> <%= entry.meal_type %></p>
  </div>
  <div class="card-body m-0 p-0">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= entry.calories %> Calories</li>
      <li class="list-group-item"><%= entry.proteins %></span> Proteins</li>
      <li class="list-group-item"><%= entry.carbohydrates %></span> Carbohydrates</li>
      <li class="list-group-item"><%= entry.fats %></span> Fats</li>
      <li class="list-group-item">Created <%= time_ago_in_words(entry.created_at) %> Ago</li>
    </ul>
  </div>
  <div class="card-footer text-center">
    <div class="d-flex flex-row">
      <% if current_page?(root_path) %>
        <div class="p-2"><%= link_to "Show", entry, class: "btn btn-success" %></div>
      <% else %>
        <div class="p-2"><%= link_to "Back", root_path , class: "btn btn-success" %></div>
      <% end %>
      <div class="p-2"><%= link_to "Edit", edit_entry_path(entry), class: "btn btn-secondary" %></div>
      <div class="p-2"><%= button_to "Delete", entry, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "btn btn-danger" %></div>
    </div>
  </div>
</div>

