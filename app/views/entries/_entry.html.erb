<div class="col mt-6 ">
  <% @entries.each do |entry| %>
    <div class="col">
      <div class="card">
        <div class="card-header">
          <p class="card-header-title" <%= entry.meal_type %>
        </div>
        <div class="card-body">
          <p><span><%= entry.calories %></span>Calories</p>
          <p><span><%= entry.proteins %></span>Proteins</p>
          <p><span><%= entry.carbohydrates %></span>Carbohydrates</p>
          <p><span><%= entry.fats %></span>Fats</p>
        </div>
        <div class="card-footer">
          <%= link_to "Show", entry, class:"card-link" %>
          <%= link_to "Edit", edit_entry_path(entry), class:"card-link" %>
          <%= link_to "Destroy", entry, method: :delete, data: { confirm: "Are you sure ?" }, class:"card-link" %>
        </div>
      </div>
    </div>
  <% end %>
</div>