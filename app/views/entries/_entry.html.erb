<div class="card my-5" style="width: 18rem;">
  <div class="card-header">
    <p class="card-title"> <%= entry.meal_type %></p>
  </div>
  <div class="card-body">
    <p><span><%= entry.calories %></span>Calories</p>
    <p><span><%= entry.proteins %></span>Proteins</p>
    <p><span><%= entry.carbohydrates %></span>Carbohydrates</p>
    <p><span><%= entry.fats %></span>Fats</p>
    <p>Created <%= time_ago_in_words(entry.created_at) %> Ago</p>
  </div>
  <div class="card-footer text-center">
    <div class="d-flex flex-row">
      <% if current_page?(root_path) %>
        <div class="p-2"><%= link_to "Show", entry, class: "btn btn-secondary" %></div>
      <% else %>
        <div class="p-2"><%= link_to "Back", root_path , class: "btn btn-secondary" %></div>
      <% end %>
      <div class="p-2"><%= link_to "Edit", edit_entry_path(entry), class: "btn btn-secondary" %></div>
      <div class="p-2"><%= button_to "Delete", entry, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "btn btn-danger" %></div>
    </div>
  </div>
</div>
